{
  "version": 2,
  "framework": null,
  "builds": [
    { "src": "client/index.html", "use": "@vercel/static-build", "config": { "distDir": "client/dist", "installCommand": "npm ci --prefix client", "buildCommand": "npm run --prefix client build" } },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Content-Security-Policy", "value": "frame-ancestors https://discord.com https://*.discord.com;" },
        { "key": "X-Frame-Options", "value": "ALLOW-FROM https://discord.com" }
      ]
    }
  ]
}


